<?xml version="1.0"?>
<robot name="test_gripper">

  <!-- ================= LINKS ================= -->

  <link name="base_link"/>

  <link name="gripper_base">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.02"/>
      </geometry>
    </visual>
  </link>

  <link name="gripper_finger">
    <visual>
      <geometry>
        <box size="0.02 0.02 0.08"/>
      </geometry>
    </visual>
  </link>

  <!-- ================= JOINTS ================= -->

  <joint name="base_to_gripper" type="fixed">
    <parent link="base_link"/>
    <child link="gripper_base"/>
  </joint>

  <!-- PRISMATIC GRIPPER JOINT -->
  <joint name="gripper_joint" type="prismatic">
    <parent link="gripper_base"/>
    <child link="gripper_finger"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="0.04" effort="10" velocity="0.05"/>
  </joint>

  <!-- ================= ROS 2 CONTROL ================= -->

  <ros2_control name="GripperSystem" type="system">
    <hardware>
      <plugin>gripper_hardware_interface/GripperHardware</plugin>
      <param name="port">/dev/ttyACM0</param>
      <param name="id">0</param>
    </hardware>

    <joint name="gripper_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>
  </ros2_control>

</robot>
